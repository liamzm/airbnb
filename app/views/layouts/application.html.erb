          <%= image_tag current_user.avatar_url(:thumb).to_s, :class => 'profile-pic-thumb'%>
 <!--          <p class='username'><%= current_user.email %></p> -->
          <%= link_to 'My Account', user_path(current_user), :class => 'my-account-link' %>
