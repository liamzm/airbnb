            <%= link_to 'My Account', user_path(current_user), :class => 'navbar-link' %>



           <div class="navbar-divider"></div>
                  
                  <%= link_to 'New Property Listing', new_property_path, :class => 'navbar-link' %>

           <div class="navbar-divider"></div>
            
   <!--                <%= current_user.email %> -->

                <%= link_to 'Sign out', sign_out_path, :class => 'navbar-link', method: :delete %>

            <div class="navbar-divider"></div>


          <% else %>

            <%= link_to 'SIGN IN', sign_in_path, :class => 'navbar-link'  %>

          <% end %>

        </div>

