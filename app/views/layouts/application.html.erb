          <img class='navbar-logo' src = '/logo6.png' />

          <h2 id="sitename"><a href="/">Liam<strong>BNB</strong></a></h2>

        </div>
<!-- 
        <div class="navbar-divider"></div> -->

        <div class="empty-box"></div>

        <div class="navbar-items">

